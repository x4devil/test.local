{% extends "adminbase.twig" %}

{% block title %}
    Сельский туризм|Поставщик
{% endblock %}

{% block content %}
    <a href="/house">Добавить домик</a>
    <a href="/subsupplier">Список субподрядчиков</a>
    <a href="/request">Список одобренных заявок</a>
    <a href="/service">Предоставляемые услуги</a>

    <div>
    	<h3>Количество свободных мест в домике</h3>
    	<form method="POST">
            <input type="hidden" name="_method" value="PUT"/>
    		{% for house in houses %}
    			<span><a href="/house/edit/{{house.getId()}}">{{ house.getName() }}</a></span> 
    			<select name="{{ house.getId() }}">
	    			{% for place in 0..house.getPlace() %}
		    			{% if loop.index == house.getEmptyPlace() %}
		    				<option value="{{ loop.index }}" selected="true" >{{ place }}</option>
		    			{% else %}
		    				<option value="{{ loop.index }}">{{ place }}</option>
		    			{% endif %}
					{% endfor %}
				</select>
                из {{ house.getPlace() }}
    		{% endfor %}
            <button type="submit">Сохранить</button>
    	</form>
    </div>
{% endblock %}
